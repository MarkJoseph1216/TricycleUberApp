<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/relativeLayoutMain"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="8dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:background="#000"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:textColor="#fff"
                    android:textStyle="bold"
                    android:fontFamily="@font/arkhip_font"
                    android:layout_centerInParent="true"
                    android:text="REGISTER"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <LinearLayout
                android:layout_marginBottom="15dp"
                android:orientation="vertical"
                android:layout_marginTop="13dp"
                android:layout_centerInParent="true"
                android:layout_below="@+id/relativeLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <android.support.design.widget.TextInputLayout
                android:theme="@style/TextInputLayoutAppearance"
                android:layout_width="265dp"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:imeOptions="actionNext"
                    android:nextFocusForward="@+id/edtPassword"
                    android:id="@+id/edtEmail"
                    android:hint="Email"
                    android:textColor="@color/gray"
                    android:textStyle="bold"
                    android:fontFamily="@font/mregular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:theme="@style/TextInputLayoutAppearance"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/edtName"
                        android:id="@+id/edtPassword"
                        android:hint="Password"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        android:fontFamily="@font/mregular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_marginTop="10dp"
                    android:theme="@style/TextInputLayoutAppearance"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/edtPhone"
                        android:id="@+id/edtName"
                        android:hint="Name"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        android:fontFamily="@font/mregular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="10dp"
                    android:theme="@style/TextInputLayoutAppearance"
                    android:layout_width="265dp"
                    android:layout_height="wrap_content">

                    <android.support.design.widget.TextInputEditText
                        android:maxLength="11"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:id="@+id/edtPhone"
                        android:hint="Phone"
                        android:textColor="@color/gray"
                        android:textStyle="bold"
                        android:fontFamily="@font/mregular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnRegisterAccount"
                    android:fontFamily="@font/arkhip_font"
                    android:text="REGISTER ACCOUNT"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_outlineblack"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>